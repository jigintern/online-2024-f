{
    "tasks": {
        "start": "deno run --watch --allow-net --allow-read server.deno.js"
    },

    "lint": {
        "include": ["./**/*.js"],
        "rules": {
            "tags": ["recommended"],
            "include": ["ban-untagged-todo"],
            "exclude": ["no-unused-vars"]
        }
    },

    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": ["./**/*.js"]
    }

}
